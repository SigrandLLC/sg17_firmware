PCI_PATH="/sys/bus/pci/drivers/@DRVNAME@"

#---------------------------------------------------------

print_usage()
{
    echo "@MANUFACTURER@ @DRVNAME@ IO window debug tool"
    echo "Usage:"
    echo "  $0 <if> s <addr> <val>     - set register <addr> to <val>"
    echo "  $0 <if> r <addr> <count>   - read <count> bytes starting from <addr>"    
}


#---------------------------------------------------------

# Check that interface name specifyed
if [ $# -lt "4" ]; then
    print_usage
    exit
fi

cdir=`pwd`
iface=$1

if [ -d "$PCI_PATH/$1" ]; then
	cd "$PCI_PATH/$1"
else
	echo "$0: No such device $1"
	exit
fi

case $2 in
    "s")
	echo "$3 $4" > winwrite
	cat winwrite
	echo
	;;
    "r")
	echo "$3 $4" > winread
	cat winread
	;;
    *)
	echo "Bad parameters!"
esac
