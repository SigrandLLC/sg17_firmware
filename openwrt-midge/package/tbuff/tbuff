#!/bin/sh

. /etc/templates/oem-vars

case $1 in
	start)
		echo "Starting tbuff"
		logger "tbuff: Starting"
		for s in `kdb get sys_pcitbl_slots`; do
			type=`kdb get sys_pcitbl_s${s}_iftype`
			if [ "$type" = "$mr17s_drvname" ]; then
				/sbin/tbuffd
				return
			fi
		done
	;;
	stop)
		echo "Stopping tbuff"
		logger "tbuff: Stopping"
		killall tbuffd
	;;
	restart)
		$0 stop
		usleep 100000
		$0 start
	;;
esac
