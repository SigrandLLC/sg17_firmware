config BR2_PACKAGE_KMOD_CPMAC
	prompt "kmod-cpmac........................ AR7 CPMAC Network Driver"
	tristate
	default y
	depends BR2_LINUX_2_4_AR7
	help
	  Driver for the AR7 CPMAC network chip

config BR2_PACKAGE_KMOD_SANGAM_ATM_A
