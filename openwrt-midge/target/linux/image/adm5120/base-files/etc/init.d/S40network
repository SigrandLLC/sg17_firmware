#!/bin/sh
#
# Start the network....
#

start() {
 	echo "Starting network..."
#	/sbin/ifup -a
	ifconfig eth0 192.168.3.2
	ifconfig eth1 192.168.2.222	
}	
stop() {
	echo -n "Stopping network..."
	/sbin/ifdown -a
}
restart() {
	stop
	start
}	

case "$1" in
  start)
  	start
	;;
  stop)
  	stop
	;;
  restart|reload)
  	restart
	;;
  *)
	echo $"Usage: $0 {start|stop|restart}"
	exit 1
esac

exit $?

